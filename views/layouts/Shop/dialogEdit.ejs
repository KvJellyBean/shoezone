<dialog id="editProductDialog">
  <!-- Form for editing an existing product -->
  <form method="post" action="/api/products/:id" enctype="multipart/form-data">
    <legend>Edit Product</legend>
    <div class="form-wrapper">
      <!-- Input field for product name -->
      <div class="input-group">
        <label for="nameInput">Product Name: </label>
        <input
          name="name"
          type="text"
          id="nameEditInput"
          required
          autocomplete="true"
          placeholder="Enter shoes name..."
        />
      </div>

      <!-- Input field for product price -->
      <div class="input-group">
        <label for="priceInput">Product Price: </label>
        <input
          name="price"
          type="number"
          id="priceEditInput"
          min="0"
          step="0.01"
          required
          placeholder="Enter price in dollar (e.g. 150.50)"
        />
      </div>

      <!-- Input field for product description -->
      <div class="input-group">
        <label for="descriptionInput">Product Description: </label>
        <textarea
          name="description"
          id="descriptionEditInput"
          required
          placeholder="Enter the shoes description..."
        ></textarea>
      </div>

      <!-- Input field for new product image -->
      <div class="input-group">
        <label for="imageInput">New Product Image: </label>
        <input name="image" type="file" accept="image/*" id="imageEditInput" />
      </div>

      <!-- Input field for product rating -->
      <div class="input-group">
        <label for="ratingInput">Product Rating: </label>
        <input
          name="rating"
          type="number"
          id="ratingEditInput"
          min="0"
          max="5"
          step="0.1"
          required
          placeholder="Enter shoes rating..."
        />
      </div>
    </div>

    <!-- Button group for submitting or canceling the form -->
    <div class="button-group">
      <button type="submit" class="btn-success editBtn">Edit</button>
      <button type="button" class="btn-danger cancelEditProduct">Cancel</button>
    </div>
  </form>
</dialog>
