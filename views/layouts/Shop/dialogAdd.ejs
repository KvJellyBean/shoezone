<dialog id="addProductDialog">
  <!-- Form for adding a new product -->
  <form method="post" action="/api/products" enctype="multipart/form-data">
    <legend>Add Product</legend>
    <div class="form-wrapper">
      <!-- Input field for product name -->
      <div class="input-group">
        <label for="nameInput">Product Name: </label>
        <input
          name="name"
          type="text"
          id="nameInput"
          value=""
          autocomplete="true"
          required
          placeholder="Enter shoes name..."
        />
      </div>

      <!-- Input field for product price -->
      <div class="input-group">
        <label for="priceInput">Product Price: </label>
        <input
          name="price"
          type="number"
          id="priceInput"
          min="0"
          step="0.01"
          value=""
          required
          placeholder="Enter price in dollar (e.g. 150.50)"
        />
      </div>

      <!-- Input field for product description -->
      <div class="input-group">
        <label for="descriptionInput">Product Description: </label>
        <textarea
          name="description"
          id="descriptionInput"
          value=""
          required
          placeholder="Enter the shoes description..."
        ></textarea>
      </div>

      <!-- Input field for product image -->
      <div class="input-group">
        <label for="imageInput">Product Image: </label>
        <input
          name="image"
          type="file"
          id="imageInput"
          value=""
          accept="image/*"
          required
        />
      </div>

      <!-- Input field for product rating -->
      <div class="input-group">
        <label for="ratingInput">Product Rating: </label>
        <input
          name="rating"
          type="number"
          id="ratingInput"
          min="0"
          max="5"
          step="0.1"
          value=""
          required
          placeholder="Enter shoes rating..."
        />
      </div>
    </div>

    <!-- Button group for submitting or canceling the form -->
    <div class="button-group">
      <button type="submit" class="btn-success submitBtn">Add Product</button>
      <button type="button" class="btn-danger cancelAddProduct">Cancel</button>
    </div>
  </form>
</dialog>
