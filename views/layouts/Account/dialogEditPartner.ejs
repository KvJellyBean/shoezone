<!-- Edit Partner Dialog -->
<dialog id="editPartnerDialog">
  <!-- Form for Editing Partner -->
  <form method="post" action="/api/partners/:id" enctype="multipart/form-data">
    <legend>Edit Partner</legend>

    <!-- Form Wrapper -->
    <div class="form-wrapper">
      <!-- Partner Name Input -->
      <div class="input-group">
        <label for="partnerNameEditInput">Partner Name: </label>
        <input
          name="name"
          type="text"
          id="partnerNameEditInput"
          value=""
          autocomplete="true"
          required
          placeholder="Enter partner name..."
        />
      </div>

      <!-- Partner Logo Input -->
      <div class="input-group">
        <label for="logoEditInput">Partner Logo: </label>
        <input
          name="logo"
          type="file"
          id="logoEditInput"
          value=""
          accept="image/*"
        />
      </div>

      <!-- Partner Website Input -->
      <div class="input-group">
        <label for="websiteEditInput">Partner Website: </label>
        <input
          name="website"
          type="text"
          id="websiteEditInput"
          value=""
          autocomplete="true"
          required
          placeholder="Enter partner website..."
        />
      </div>
    </div>

    <!-- Button Group -->
    <div class="button-group">
      <!-- Edit button -->
      <button type="submit" class="btn-success editBtnPartner">Edit</button>
      <!-- Cancel button -->
      <button type="button" class="btn-danger cancelEditPartner">Cancel</button>
    </div>
  </form>
</dialog>
