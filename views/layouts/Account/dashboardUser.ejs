<!-- Profile Container Section -->
<div class="profileContainer p-4" data-aos="fade-down">
  <div class="container card p-0">
    <div class="card-header">
      <h3>Profile</h3>
    </div>

    <!-- Profile Card Body -->
    <div
      class="card-body d-flex align-items-center justify-content-center py-5"
    >
      <!-- Profile Image and Info -->
      <div class="d-flex flex-column align-items-center text-center">
        <!-- Profile Image -->
        <img
          src="<%= user.image %>"
          alt="<%= user.username %> photo"
          class="rounded-circle profileImage"
          width="140"
          height="140"
        />

        <!-- Profile Details -->
        <div class="mt-3">
          <h4><%= user.username %></h4>
          <p class="text-secondary mb-1"><%= user.phone %></p>
          <p class="text-muted font-size-sm"><%= user.address %></p>
        </div>
      </div>

      <!-- Profile Form -->
      <div class="profile">
        <form
          class="profile-info"
          id="formProfile"
          method="post"
          action="/api/account"
          enctype="multipart/form-data"
        >
          <!-- Email -->
          <div class="profile-info-item">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              value="<%= user.email %>"
              disabled
            />
          </div>
          <!-- Username -->
          <div class="profile-info-item">
            <label for="username">Username</label>
            <input
              type="text"
              id="username"
              name="username"
              value="<%= user.username %>"
            />
          </div>
          <!-- Phone -->
          <div class="profile-info-item">
            <label for="phone">Phone</label>
            <input
              type="tel"
              id="phone"
              name="phone"
              value="<%= user.phone %>"
            />
          </div>
          <!-- Address -->
          <div class="profile-info-item">
            <label for="address">Address</label>
            <input
              type="text"
              id="address"
              name="address"
              value="<%= user.address %>"
            />
          </div>
          <!-- Profile Image -->
          <div class="profile-info-item">
            <label for="image">Profile Image</label>
            <input type="file" id="image" name="image" />
          </div>

          <!-- Submit button -->
          <button
            type="submit"
            id="edit-profile"
            class="btn btn-success submitEditProfile"
          >
            Edit Profile
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
